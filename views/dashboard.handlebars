<section class="card">
    <div class="card-header">{{user.username}}'s dashboard</div>
</section>

{{#if user.posts.length}}
<section class="card">
    <div class="card-header">Your Posts</div>
    <div class="post-body">
        <ul class="post-list">
            {{#each user.posts}}
            <a href="/dashboard/edit/{{id}}">
                <li class="post-list-item" >
                    <div>{{post_title}}</div>
                    <div>{{format_date date_created}}</div>
                </li>
            </a>
            {{/each}}
        </ul>
    </div>
</section>
{{/if}}

<section class="card hide" id="create-post-card">
    <div class="card-header">Create New Post</div>
    <div class="card-body">
        <form class="new-post-form">
            <div>
                <label for="post-title" class="form-label">Title</label>
                <input class="form-input" id="post-title" type="text" name="post-title"/>
            </div>
            <div>
                <label for="post-content" class="form-label">Post Content</label>
                <textarea class="form-textarea" id="post-content" name="post-content" /></textarea>
            </div>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>

</section>
<div class="center">
    <button id="add-post-btn">Add Post</button> 
</div>

<script src="/js/add-post.js"></script>